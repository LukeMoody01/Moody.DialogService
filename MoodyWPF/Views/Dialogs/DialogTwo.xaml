<UserControl 
    x:Class="Moody.WPF.DialogTwo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:moody="clr-namespace:Moody.Core.Settings;assembly=Moody.DialogService"
    moody:DialogSettings.DialogName="Dialog Two"
    moody:DialogSettings.WindowStyle="None">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height=".8*"/>
        </Grid.RowDefinitions>
        <TextBlock 
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="20"
            Text="Hi, I am Dialog Two"/>
        <Button 
            Grid.Row="1"
            Margin="8"
            Padding="8"
            Content="Close This Dialog!"
            Command="{Binding CloseThisDialogCommand}" />
    </Grid>
</UserControl>
